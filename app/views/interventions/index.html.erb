<p id="notice"><%= notice %></p>

<h1>Interventions</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Customer</th>
      <th>Building</th>
      <th>Battery</th>
      <th>Column</th>
      <th>Elevator</th>
      <th>Employee</th>
      <th>Start date and time of the intervention</th>
      <th>End date and time of the intervention</th>
      <th>Result</th>
      <th>Report</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @interventions.each do |intervention| %>
      <tr>
        <td><%= intervention.author %></td>
        <td><%= intervention.customer %></td>
        <td><%= intervention.building %></td>
        <td><%= intervention.battery %></td>
        <td><%= intervention.column %></td>
        <td><%= intervention.elevator %></td>
        <td><%= intervention.employee %></td>
        <td><%= intervention.start_date_and_time_of_the_intervention %></td>
        <td><%= intervention.end_date_and_time_of_the_intervention %></td>
        <td><%= intervention.result %></td>
        <td><%= intervention.report %></td>
        <td><%= intervention.status %></td>
        <td><%= link_to 'Show', intervention %></td>
        <td><%= link_to 'Edit', edit_intervention_path(intervention) %></td>
        <td><%= link_to 'Destroy', intervention, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

